{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Seiten",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^[a-z0-9_-]+$"
    },
    "linkage": {
      "type": "enumeration",
      "enum": [
        "navbar",
        "footer"
      ],
      "default": "navbar",
      "required": true
    },
    "linkage_position": {
      "type": "string",
      "required": true,
      "default": "navbar_099",
      "regex": "^(navbar_(0\\d{2})|footer_(1\\d{2}))$",
      "unique": true
    },
    "navigation_title": {
      "type": "string",
      "required": true,
      "regex": "^[A-ZÜÄÖ][a-zA-Z0-9\\s]*$",
      "minLength": 2
    },
    "seo_settings": {
      "type": "component",
      "repeatable": false,
      "component": "meta-data.seo-settings"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "pages.about-page",
        "pages.home-page",
        "pages.leistungen-page"
      ],
      "required": true,
      "max": 1
    }
  }
}
